<% provide(:title, "New Task") %>

<h1>タスク新規作成</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
   <%= render 'shared/task_error_messages' %>
    
    <%= form_with(model: @task, url: user_tasks_path(@user), local: true) do |f| %>
      <%= f.label :名称, class: "label-form" %>
      <%= f.text_field :name, class: "form-control" %>
      
      <%= f.label :詳細, class: "label-form label-description" %>
      <%= f.text_area :description, rows: 5, class: "form-control" %>
      
      <%= f.submit "新規作成", class: "btn btn-primary btn-signup" %>
    <% end %>
  </div>
</div><!-- ../row -->