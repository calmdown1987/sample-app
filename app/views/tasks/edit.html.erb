<% provide(:title, "Edit Task") %>
<h1>タスク編集</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render 'shared/error_messages' %>
    
    <%= form_with(model: @task, url: user_task_path(@user), local: true, method: :patch) do |f| %>
      <%= f.label :名称, class: "label-form" %>
      <%= f.text_field :name, class: "form-control" %>
      
      <%= f.label :詳細, class: "label-form" %>
      <%= f.text_area :description, rows: 5, class: "form-control" %>
      
      <%= f.submit "更新", class: "btn btn-primary btn-signup" %>
      <%= link_to "キャンセル", user_tasks_path(@user), class:"btn btn-default btn-signup" %>
    <% end %>
  </div>  
</div>
