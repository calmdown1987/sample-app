<% provide(:title,@user.name) %>
<h1>ユーザー情報の更新</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3 ">
    
    <%= form_with(model: @user, url: user_path(@user), local: true, method: :patch) do |f| %>
      <%= f.label :名前, class: "label-signup" %>
      <%= f.text_field :name, class: "form-control" %>
      
      <%= f.label :メールアドレス, class: "label-signup" %>
      <%= f.email_field :email, class: "form-control" %>
      
      <%= f.label :パスワード, class: "label-signup" %>
      <%= f.password_field :password, class: "form-control" %>
      
      <%= f.label :パスワード再入力, class: "label-signup" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
      
      <%= f.submit "更新", class: "btn btn-primary btn-block" %>
    <% end %>
  </div><!-- /col-md-6 -->  
</div><!-- /.row -->