<% provide(:title, @user.name) %>
<h1>プロフィール</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <table class="table table-bordered show-table">
      <tbody>
        <tr>
          <th class="col-md-3 align-middle text-center show-th">ID</th>
          <td class="col-md-9"><%= @user.id %></td>
        </tr>
        <tr>
          <th class="col-md-3 align-middle text-center show-th">名前</th>
          <td class="col-md-9"><%= @user.name %></td>
        </tr>
        <tr>
          <th class="col-md-3 align-middle text-center show-th">メールアドレス</th>
          <td class="col-md-9"><%= @user.email %></td>
        </tr>
        <tr>
          <th class="col-md-3 align-middle text-center show-th">作成日</th>
          <td class="col-md-9"><%= l @user.created_at %></td>
        </tr>
      </tbody>
    </table>
  </div>    
</div>
