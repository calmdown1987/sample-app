<% provide(:title,"User") %>
<h1>利用者一覧</h1>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <table class="table table-hover table-condensed users-table id="user-table">
    <thead>
      <tr>
       <th>名前</th>
      <tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
      <td><%= link_to user.name, user %></td>
      <td>
      <div class="text-right">
      <%= link_to "削除", user_path(user.id), method: :delete, class:"btn btn-danger" %>
      </div>
      </td>
      </tr>
      <% end %>
    </tbody>
    </table>
  </div><!-- ./col-md-10 col-md-offset-1 -->
</div><!-- ./row -->