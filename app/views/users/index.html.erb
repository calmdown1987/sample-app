<% provide(:title,"User") %>
<h1>利用者一覧</h1>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <%= will_paginate %>
    <table class="table table-hover table-condensed users-table id="user-table">
    <thead>
      <tr>
       <th>名前</th>
      <tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name, user %></td>
      <td>
        <% unless user.admin? %>
        <div class="text-right">
          <%= link_to "削除", user_path(user.id), method: :delete, data: { confirm: "#{user.name}を削除します。よろしいですか?"}, class:"btn btn-danger" %>
        <% end %>
        </div>
      </td>
      </tr>
      <% end %>
    </tbody>
    </table>
    <%= will_paginate %>
  </div><!-- ./col-md-10 col-md-offset-1 -->
</div><!-- ./row -->