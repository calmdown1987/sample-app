<% provide(:title, "Top") %>
<div class="container">
  <div class="row">
    <div class="col-md-7">
      <div class="jumbotron">
      <h1 class="top-main-title">TaskApp</h1>
      <p>TaskAppは簡易ToDo管理ツールです。</p>
      <p>↓↓初めてのご利用↓↓</p>
      <% if !logged_in? || current_user && current_user.admin? %>
        <a class="btn btn-lg btn-success" href="/signup">アカウント作成</a>
      <% else %>
        <a class="btn btn-lg btn-success nolink" tabindex="-1" href="#">アカウント作成</a>
      <% end %>
      <div class="guest-btn">
      <a class="btn btn-danger" href="/guest-admin/login">ゲストログイン(管理権限)</a>
      <a class="btn btn-warning" href="/guest/login">ゲストログイン(一般権限)</a>
      </div><!-- ../guest-btn -->
      </div><!-- ../jumbotron -->
    </div><!-- ../create-login-wrapper -->
    <div class="col-md-4">
      <h1>ログイン</h1>
      <% if logged_in? %>
      
      <%= form_with(scope: :session, url:login_path, local:true) do |f| %>
      
        <%= f.label :メールアドレス, class:"label-login" %>
        <%= f.email_field :email, disabled: true, class: 'form-control' %>
        
        <%= f.label :パスワード, class: "label-login" %>
        <%= f.password_field :password, disabled: true, class: 'form-control' %>
        
        <%= f.label :remember_me, class:"checkbox inline checkbox-login", for:"remember-me" do %>
        <%= f.check_box :remember_me, disabled: true, id: "remember_me" %>
        <span>ログイン情報を記憶する</span>
      <% end %>
      
      <%= f.submit "ログイン", disabled: true, class: "btn btn-primary btn-block btn-login" %>
     <% end %>  
     
     <% else %>
     
        <%= form_with(scope: :session, url:login_path, local:true) do |f| %>
      
        <%= f.label :メールアドレス, class:"label-login" %>
        <%= f.email_field :email, class: 'form-control' %>
        
        <%= f.label :パスワード, class: "label-login" %>
        <%= f.password_field :password, class: 'form-control' %>
        
        <%= f.label :remember_me, class:"checkbox inline checkbox-login", for:"remember-me" do %>
        <%= f.check_box :remember_me, id: "remember_me" %>
        <span>ログイン情報を記憶する</span>
      <% end %>
      
      <%= f.submit "ログイン", class: "btn btn-primary btn-block btn-login" %>
     <% end %>  
     
     
     <% end %>
    </div><!-- ../col-md-4 -->
</div><!-- ../row -->
</div><!-- ../container -->